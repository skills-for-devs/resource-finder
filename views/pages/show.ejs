<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/reset.css">
  <link rel="stylesheet" href="/styles/base.css">
  <link rel="stylesheet" href="/styles/layout.css">
  <link rel="stylesheet" href="/styles/modules.css">
  <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <title>Search</title>
</head>
<body>
  <nav><a href="/resources/<%= user %>">View Saved Resources</a></nav>
  <main>
    <h1>Search Results</h1>
    <section id="jobsinfo">
    <% for(let i = 0; i < content.jobs.length; i++){ %>
    <ul>
      <li><img src ="<%= content.jobs[i].logo%>" width="200px"></li>
      <li><a href="<%= content.jobs[i].url %>"><%= content.jobs[i].title %></a></li>
      <li><%= content.jobs[i].description %></li>
      <form action="/jobresources/<%= user %>" method="POST">
        <input type="hidden" name="title" value="<%= content.jobs[i].title %>">
        <input type="hidden" name="url" value="<%= content.jobs[i].url %>">
        <input type="hidden" name="description" value="<%= content.jobs[i].description %>">
        <input type="hidden" name="logo" value="<%= content.jobs[i].logo %>">
        <input type="hidden" name="query" value="<%= query %>">
        <input type="submit" value="Bookmark this Job">
      </form>
    </ul>
    <% } %>
  </section>
  <section id="videoinfo">
    <% for(let i = 0; i < content.videos.length; i++){ %>
    <ul>
      <li><a href="<%= content.videos[i].url %>"><img src="<%= content.videos[i].image%>" width="200px"></a></li>
      <li><%= content.videos[i].title %></a></li>
      <li><%= content.videos[i].description %></li>
      <form action="/videoresources/<%= user %>" method="POST">
        <input type="hidden" name="title" value="<%= content.videos[i].title %>">
        <input type="hidden" name="url" value="<%= content.videos[i].url %>">
        <input type="hidden" name="description" value="<%= content.videos[i].description %>">
        <input type="hidden" name="image" value="<%= content.videos[i].image %>">
        <input type="hidden" name="query" value="<%= query %>">
        <input type="submit" value="Bookmark this Video">
      </form>
    </ul>
    <% } %>
  </section>

  </main>

</body>
</html>