<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
  <link href="https://fonts.googleapis.com/css2?family=VT323&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles/reset.css">
  <link rel="stylesheet" href="/styles/base.css">
  <link rel="stylesheet" href="/styles/layout.css">
  <link rel="stylesheet" href="/styles/modules.css">
  <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <title>Search</title>
</head>
<body id="searchresults">
  <%- include('layout/nav.ejs') %>
  <main>
    <h1>Search Results</h1>
    <h3>Jobs Postings</h3>
    <section id="jobsinfo">
    <% for(let i = 0; i < content.jobs.length; i++){ %>
    <ul>
      <li><a href="<%= content.jobs[i].url %>" target="_blank"><%= content.jobs[i].title %></a></li>
      <p><%= content.jobs[i].description %></p>
      <form action="/jobresources/<%= user %>" method="POST">
        <input type="hidden" name="title" value="<%= content.jobs[i].title %>">
        <input type="hidden" name="url" value="<%= content.jobs[i].url %>">
        <input type="hidden" name="description" value="<%= content.jobs[i].description %>">
        <input type="hidden" name="query" value="<%= query %>">
        <input type="text" name="note" value="<%= content.jobs[i].note %>" placeholder="Enter a note here">
        <input type="submit" value="Bookmark this Job">
      </form>
    </ul>
    <% } %>
  </section>
  <h3>Learning Resources</h3>
  <section id="videoinfo">
    <% for(let i = 0; i < content.videos.length; i++){ %>
    <ul>
      <li><iframe width="400" height="300" src="<%= content.videos[i].url %>" frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
      allowfullscreen></iframe></li>
      <li><%= content.videos[i].title %></a></li>
      <li><%= content.videos[i].description %></li>
      <form action="/videoresources/<%= user %>" method="POST">
        <input type="hidden" name="title" value="<%= content.videos[i].title %>">
        <input type="hidden" name="url" value="<%= content.videos[i].url %>">
        <input type="hidden" name="description" value="<%= content.videos[i].description %>">
        <input type="hidden" name="image" value="<%= content.videos[i].image %>">
        <input type="hidden" name="query" value="<%= query %>">
        <input type="text" name="note" value="<%= content.videos[i].note %>" placeholder="Enter a note here">
        <input type="submit" value="Bookmark this Video">
      </form>
    </ul>
    <% } %>
  </section>

  </main>

</body>
</html>