<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=VT323&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles/reset.css">
  <link rel="stylesheet" href="/styles/base.css">
  <link rel="stylesheet" href="/styles/layout.css">
  <link rel="stylesheet" href="/styles/modules.css">
  <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <title>Saved Resources</title>
</head>


<body id="saved">
  <%- include('layout/nav.ejs') %>
  <main>

  <h1>Saved Resources</h1>
  <button class="updatenotes">Update notes</button>
  <div>
  <section id="savedjobs">
    <% for(let i = 0; i < jobs.length; i++){ %>
    <ul>
      <li><img src ="<%= jobs[i].logo%>" width="200px"></li>
      <li><a href="<%= jobs[i].url %>" target="_blank"><%= jobs[i].title %></a></li>
      <p><%= jobs[i].note %></p>
      <form action="/resources/user/<%= user %>/resource/<%= jobs[i].id %>?_method=delete" method="POST">
        <input type="hidden" name="resource-type" value="job">
        <input type="hidden" name="user" value="<%= user %>">
        <input type="submit" value="Delete job">
      </form>
      <!-- <button class="updatejobsnote">Update jobs note</button> -->
      <form class="noteedit" action="/resources/user/<%= user %>/resource/<%= jobs[i].id %>?_method=put" method="POST">
        <input type="hidden" name="title" value="<%= jobs[i].title %>">
        <input type="hidden" name="url" value="<%= jobs[i].url %>">
        <input type="hidden" name="logo" value="<%= jobs[i].logo %>">
        <input type="hidden" name="resource-type" value="job">
        <input type="hidden" name="user" value="<%= user %>">
        <input type="text" name="note" value="<%= jobs[i].note %>">
        <input type="submit" value="update job note">
      </form>
    </ul>
    <% } %>
  </section>
  <section id="savedvideos">
    <% for(let i = 0; i < videos.length; i++){ %>
    <ul>
      <li><a href="<%= videos[i].url %>" target="_blank"><img src="<%= videos[i].image%>" width="200px"></a></li>
      <li><%= videos[i].title %></a></li>
      <li><%= videos[i].description %></li>
      <p><%= videos[i].note %></p>
      <form action="/resources/user/<%= user %>/resource/<%= videos[i].id %>?_method=delete" method="POST">
        <input type="hidden" name="resource-type" value="video">
        <input type="hidden" name="user" value="<%= user %>">
        <input type="submit" value="Delete video">
      </form>
      <!-- <button class="updatevideonote">Update video note</button> -->
      <form class="noteedit" action="/resources/user/<%= user %>/resource/<%= videos[i].id %>?_method=put" method="POST">
        <input type="hidden" name="title" value="<%= videos[i].title %>">
        <input type="hidden" name="url" value="<%= videos[i].url %>">
        <input type="hidden" name="image" value="<%= videos[i].image %>">
        <input type="hidden" name="resource-type" value="video">
        <input type="hidden" name="user" value="<%= user %>">
        <input type="text" name="note" value="<%= videos[i].note %>">
        <input type="submit" value="update video note">
      </form>
    </ul>
    <% } %>
  </section>
  </div>
  </main>
  <script src="../../js/button.js"></script>
<footer></footer>
</body>

</html>