<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/reset.css">
  <link rel="stylesheet" href="/styles/base.css">
  <link rel="stylesheet" href="/styles/layout.css">
  <link rel="stylesheet" href="/styles/modules.css">
  <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <title>Saved Resources</title>
</head>


<body>
  <header>
  </header>
  <main>
    <% console.log('this is from back end', user) %>

    <h1>Saved Resources</h1>
    <section id="savedjobs">
    <% for(let i = 0; i < jobs.length; i++){ %>
    <ul>
      <li><img src ="<%= jobs[i].logo%>" width="200px"></li>
      <li><a href="<%= jobs[i].url %>"><%= jobs[i].title %></a></li>
      <p><%= jobs[i].note %></p>
      <form action="/resources/user/<%= user %>/resource/<%= jobs[i].id %>?_method=delete" method="POST">
        <input type="hidden" name="resource-type" value="job">
        <input type="hidden" name="user" value="<%= user %>">
        <input type="submit" value="Delete job">
      </form>
    </ul>
    <% } %>
  </section>
  <section id="savedvideos">
    <% for(let i = 0; i < videos.length; i++){ %>
    <ul>
      <li><a href="<%= videos[i].url %>"><img src="<%= videos[i].image%>" width="200px"></a></li>
      <li><%= videos[i].title %></a></li>
      <li><%= videos[i].description %></li>
      <p><%= videos[i].note %></p>
      <form action="/resources/user/<%= user %>/resource/<%= videos[i].id %>?_method=delete" method="POST">
        <input type="hidden" name="resource-type" value="video">
        <input type="hidden" name="user" value="<%= user %>">
        <input type="submit" value="Delete video">
      </form>
    </ul>
    <% } %>
  </section>
  </main>

<footer></footer>
</body>

</html>